generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String         @id @default(uuid())
  name         String
  phoneNumber  String         @unique
  email        String         @unique
  passwordHash String
  reports      Report[]
  confirmations Confirmation[]
}

model Report {
  id            String         @id @default(uuid())
  user          User           @relation(fields: [userId], references: [id])
  userId        String
  latitude      Float
  longitude     Float
  type          HazardType
  description   String?
  createdAt     DateTime       @default(now())
  confirmations Confirmation[]

  @@index([latitude, longitude])
}

model Confirmation {
  id        String   @id @default(uuid())
  report    Report   @relation(fields: [reportId], references: [id])
  reportId  String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  isTrue    Boolean
  createdAt DateTime @default(now())

  @@unique([reportId, userId])
}

enum HazardType {
  POTHOLE
  SPEED_BUMP
  ROAD_PATCH
}
