{
  "name": "roadmap",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:gen": "cd packages/db && pnpm gen && cd ..",
    "db:migrate": "cd packages/db && pnpm migrate && cd ..",
    "db:deploy": "cd packages/db && pnpm migrate:deploy && cd ..",
    "db:studio": "cd packages/db && pnpm studio && cd ..",
    "db:reset": "cd packages/db && pnpm reset && cd .."
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
